json("theme.json")

.input-validation
  display none
  width 0
  pointer-events none

.form
  display flex
  font-size 1.2em
  width 500px

  .field-group
    align-items center
    display flex
    position relative

  .label
    opacity 0
    color gray-light
    pointer-events none
    position absolute
    right 100%
    top 0
    transition opacity linear 80ms

  .field, .label
    margin 14px 0
    padding 3px 6px
    font-family font-serif

  .field[data-value="filled"] ~ .label
    opacity 1

  .field
    flex 1 0 auto

    border 0
    display block

    background transparent

    &::placeholder
      color gray-light

    &[type="text"], &[type="password"], &[type="email"]
      border-bottom 1px dotted gray-lighter

      &:hover, &:read-only
        border-bottom 1px dotted gray-light

      &:focus
        outline 0
        border-bottom 1px dotted gray-base

        & ~ .input-validation
          display inline-block

        &:invalid ~ .input-validation:after
          color brand-warning
          content "\270D" // Writing hand

        &:valid ~ .input-validation:after
          color brand-success
          content "\2713" // Checkmark

  textarea
    min-height 100px
    border 1px solid offwhite
